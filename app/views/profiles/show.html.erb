<!-- component -->
<div class="flex items-center mt-20 w-full justify-center">
  <div class="max-w-5xl w-9/12">
      <div class="bg-white shadow-xl rounded-lg py-3">
          <div class="photo-wrapper p-2 justify-center flex">
              <%= image_tag current_user.avatar.url, class: "profile-img " %>
          </div>
          <div class="p-2">
              <h3 class="text-center text-2xl text-gray-900 font-medium leading-8"><%= current_user.name %></h3>
              <table class="text-xl my-3 flex justify-center">
                  <tbody><tr class="bg-accent">
                      <td class="px-2 py-2 font-semibold">メールアドレス</td>
                      <td class="px-2 py-2"><%= current_user.email %></td>
                  </tr>
                  <tr>
                      <td class="px-2 py-2 font-semibold">自己紹介</td>
                      <td class="px-2 py-2"><%= current_user.introduction %></td>
                  </tr>
              </tbody></table>

              <div class="text-center my-3">
                <%= link_to "編集", edit_profile_path(@user), class: "btn btn-primary" %>
              </div>

          </div>
      </div>
  </div>
</div>