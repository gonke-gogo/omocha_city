<%= link_to (post_path(id: post.id)), class: "hover:opacity-75" do %>
  <div class="card card-compact w-80 bg-base-100 shadow-xl  mt-3 ">
      <%= image_tag post.toy_image_url, class:"h-52", size: '300x200' %>
    <div class="card-body">
      <h2 class="card-title"><%= post.toy_name %></h2>
      <% unless post.categories.blank? %>
        <div class="flex">
          <% post.categories.each do |category| %>
            <div class="badge badge-primary m-1">
              <%= category.category_name %>
            </div>
          <% end %>
        </div>
      <% end %>
      <div class="flex justify-between">
        <p><%= post.content %></p>
      </div>
      <div class="flex">
        <div class="avatar">
          <div class="avatar-img-xs">
            <%= image_tag post.user.avatar.url %>
          </div>
        </div>
        <ul class="flex">
          <li class="card-title ml-2"><%= post.user.name %></li>
          <li class="h-10 leading-10 ml-5 flex items-center">
            <i class="fa-solid fa-calendar-days "></i>
            <p class="inline-block ml-1"><%= post.created_at.strftime('%Y/%m/%d')%></p>
          </li>
        </ul>
      </div>
    </div>
  </div>
<% end %>

