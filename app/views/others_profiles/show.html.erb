<% content_for(:title, t('.title')) %>
<!-- component -->
<div class="flex items-center mt-20 w-full justify-center">
  <div class="max-w-5xl w-9/12">
      <div class="bg-white shadow-xl rounded-lg py-3">
          <div class="photo-wrapper p-2 justify-center flex">
            <%= image_tag @user.avatar.url, class: "profile-img " %>
          </div>
          <div class="p-2">
            <h3 class="text-center text-2xl text-gray-900 font-medium leading-8"><%= @user.name %></h3>
            <div class="text-center my-3">
              <% if logged_in? %>
                <%= render 'follow_relationships/follow_button', user: @user %>
                <div class="flex justify-center">
                  <%= link_to  followings_user_path(@user), class: "m-1" do %>
                    <div>フォロー中 <%= @user.following.count %></div>  
                  <% end %>
                  <%= link_to followers_user_path(@user), class: "m-1" do %>
                    <div>フォロワー <%= @user.follower.count %></div>  
                  <% end %>
                </div>
              <% end %>
            </div>
            <table class="text-xl my-3 flex justify-center">
              <tbody>
                <tr class="bg">
                    <td class="px-2 py-2 font-semibold">自己紹介</td>
                    <td>:</td>
                  <td class="px-2 py-2"><%= @user.introduction %></td>
                </tr>
              </tbody>
            </table>
            <div class="text-center">
              <%= link_to 'レビュー内容',others_post_others_profile_path(@user), class: 'btn btn-secondary' %>
            </div>
          </div>
      </div>
  </div>
</div>