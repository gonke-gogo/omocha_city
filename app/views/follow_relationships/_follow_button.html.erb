<% unless user == current_user %>
  <% if current_user.following?(user) %>
    <%= link_to 'フォローを外す', unfollow_user_path(user.id),  data: { "turbo-method": :post }, class: "btn btn-outline btn-error" %>
  <% else %>
    <%= link_to 'フォローする', follow_user_path(user.id),  data: { "turbo-method": :post }, class: "btn btn-secondary" %>
  <% end %>
<% end %>